{
	"name": "flue",
	"type": "module",
	"private": true,
	"license": "Apache-2.0",
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@9.12.3",
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"check": "turbo run build check:lint check:types",
		"check:lint": "biome lint . --error-on-warnings",
		"check:types": "turbo run check:types",
		"format": "turbo run format:lint format:style",
		"format:lint": "biome check . --write",
		"format:style": "prettier . --cache --write --list-different"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/node": "^22.10.10",
		"bgproc": "^0.2.0",
		"prettier": "^3.4.2",
		"tsx": "^4.19.2",
		"turbo": "^2.3.3",
		"typescript": "^5.9.2"
	}
}
