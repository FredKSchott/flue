---
import "../styles/global.css";
import { Code } from "astro:components";
import { createHighlighter } from "shiki";
import { HERO, ISSUE_TRIAGE, CODE_REVIEW, SECURITY_SCAN, AI_ASSISTANT } from "../code-snippets";

const replaces: Record<string, string[]> = {
  triage: ['Dosu', 'Sweep', 'Ellipsis'],
  review: ['CodeRabbit', 'Qodo', 'Sourcery', 'Bugbot'],
  security: ['Snyk', 'SonarQube', 'Checkmarx', 'Veracode'],
  general: ['Devin', 'GitHub Copilot', 'Cursor', 'Windsurf'],
};

const tabs = [
  { id: 'review', label: 'AI code review', badgeLabel: 'Code Review', code: CODE_REVIEW, lines: CODE_REVIEW.split('\n').length - 1 },
  { id: 'triage', label: 'AI issue triage', badgeLabel: 'Issue Triage', code: ISSUE_TRIAGE, lines: ISSUE_TRIAGE.split('\n').length - 1 },
  { id: 'security', label: 'AI security scan', badgeLabel: 'Security Scan', code: SECURITY_SCAN, lines: SECURITY_SCAN.split('\n').length - 1 },
  { id: 'general', label: 'AI assistant', badgeLabel: 'Repo Assistant', code: AI_ASSISTANT, lines: AI_ASSISTANT.split('\n').length - 1 },
];

const highlighter = await createHighlighter({
  themes: ['github-light'],
  langs: ['typescript'],
});

const highlighted = tabs.map((tab) => ({
  ...tab,
  html: highlighter.codeToHtml(tab.code, { lang: 'typescript', theme: 'github-light' }),
}));

highlighter.dispose();
